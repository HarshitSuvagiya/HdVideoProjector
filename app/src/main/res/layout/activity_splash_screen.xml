<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="10">



    <LinearLayout
        android:id="@+id/llLoader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <hdvideoprojector.videosimulator.utils.CircleImageView
            android:id="@+id/ivImg1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/progress_icon"
            android:visibility="invisible" />

        <hdvideoprojector.videosimulator.utils.CircleImageView
            android:id="@+id/ivImg2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/progress_icon"
            android:contentDescription="@string/app_name"
            android:visibility="invisible" />

        <hdvideoprojector.videosimulator.utils.CircleImageView
            android:id="@+id/ivImg3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/progress_icon"
            android:contentDescription="@string/app_name"
            android:visibility="invisible" />

        <hdvideoprojector.videosimulator.utils.CircleImageView
            android:id="@+id/ivImg4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/progress_icon"
            android:contentDescription="@string/app_name"
            android:visibility="invisible" />
    </LinearLayout>


</RelativeLayout>